<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/emojicons_google_keyboard_background"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/emojis_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_height"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/emojis_keyboard_image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/ic_emoji_keyboard_hide"
            android:tint="@color/emojicons_unselected_tab" />

        <ImageButton
            android:id="@+id/emojis_tab_0_recents"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:padding="@dimen/tab_padding"
            android:scaleType="center"
            android:src="@drawable/ic_emoji_recents"
            android:tint="@color/emojicons_unselected_tab" />

        <ImageButton
            android:id="@+id/emojis_tab_1_people"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:padding="@dimen/tab_padding"
            android:scaleType="center"
            android:src="@drawable/ic_emoji_smile"
            android:tint="@color/emojicons_unselected_tab" />

        <ImageButton
            android:id="@+id/emojis_tab_2_nature"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="center"
            android:src="@drawable/ic_emoji_flower"
            android:tint="@color/emojicons_unselected_tab" />

        <ImageButton
            android:id="@+id/emojis_tab_3_objects"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="center"
            android:src="@drawable/ic_emoji_bell"
            android:tint="@color/emojicons_unselected_tab" />

        <ImageButton
            android:id="@+id/emojis_tab_4_cars"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="center"
            android:src="@drawable/ic_emoji_car"
            android:tint="@color/emojicons_unselected_tab" />

        <ImageButton
            android:id="@+id/emojis_tab_5_punctuation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="center"
            android:src="@drawable/ic_emoji_grid"
            android:tint="@color/emojicons_unselected_tab" />

        <ImageButton
            android:id="@+id/emojis_backspace"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/ic_emoji_backspace"
            android:tint="@color/emojicons_unselected_tab" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/emojicons_google_keyboard_item_tertiary" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/emojis_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
